	<head>
		<title>Pokemon</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel='stylesheet' href='/stylesheets/main.css' />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<nav id="nav">
					<ul>
						<li><a href="/trainers">Trainers</a></li>
						<li><a href="/pokemon">Pokémon</a></li>
						<li><a href="/gym">Gym</a></li>
					</ul>
				</nav>
			</header>

			<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

		<!-- Banner -->
			<section id="banner">
				<img class="img" src="/images/pokemon-logo.png" alt="" >
				<!-- <p>Lorem ipsum dolor sit amet nullam consequat <br /> interdum vivamus donce sed libero.</p> -->

			</section>

			<!-- One -->
				<section id="one" class="wrapper style1">
					<div class="container 75%">
						<div class="row 200%">
							<div class="6u 12u$(medium)">
								<header class="major nowrap">
									<h2><%= trainer.name %>'s Pokémon:</h2>
								</header>
							</div>
							<div class="6u$ 12u$(medium)">
                <% for(let i = 0; i < pokemon.length; i++){%>
                  <div class="trainersDiv">
                    <p><%= pokemon[i].name %></p>
                  </div>
                <%}%>
							</div>
              <div class="10u 12u$(medium)">

              </div>
              <div class="2u 12u$(medium)">
                <ul class="actions">
                  <li class="top-marg"><a href="/trainers/#one" class="button  " >Back</a></li>
                </ul>
              </div>

						</div>
					</div>
				</section>


			<!-- THREE -->
				<section id="four" class="wrapper style3 special">
					<div class="container">
						<header class="major">
							<h2>Train, Battle, Catch Em All</h2>
						</header>
					</div>
				</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="container">

					<ul class="copyright">
						<li>&copy; Untitled</li>
