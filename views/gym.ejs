<html>
	<head>
		<title>Pokemon</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel='stylesheet' href='/stylesheets/main.css' />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<nav id="nav">
					<ul>
						<li><a href="/trainers">Trainers</a></li>
						<li><a href="/pokemon">Pok√©mon</a></li>
						<li><a href="/gym">Gym</a></li>
					</ul>
				</nav>
			</header>

			<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

		<!-- Banner -->
			<section id="banner">
				<img class="img" src="/images/pokemon-logo.png" alt="" >

				<ul class="actions">
					<li class="top-marg"><a href="/" class="button special big gradient">Home</a></li>
				</ul>
			</section>

			<!-- One -->
				<section id="one" class="wrapper style1">
					<div class="container 75%">
						<div class="row 200%">
							<div class="12u 12u$(medium)">
								<header class="">
									<h2>Gym</h2>
								</header>
                <div class="playersMargTop">


									<!-- if no pokemon are in gym yet get form that adds selected -->
									<% if( p1.name == 'temp' || p2.name == 'temp'){%>
											<form class="" action="/putingymfromgym" method="post">
									<%}else{ %>
										<!-- if both slots are full get fighty form  -->
										<form class="" action="/fight" method="get">
									<% }%>

									<% if(p1.name != "temp"){ %>
										<p><b>Player 1:</b></p><input type="text" id='p1' name="" value=" <%= p1.name %> "disabled>
									<% }else{ %>
							      <label for="sel1">Select pokemon 1:</label>
							      <select class="form-control" id="sel1" name="p1dlist" required>
											<option selected disabled hidden>Choose form this list...</option>
							     		<% for(let i = 0; i < pokelist.length;i++){%>
												<option value="<%= pokelist[i].id %>"><%= pokelist[i].name %></option>
											<%}%>
							      </select>
									<% } %>
									<% if(p2.name != "temp"){ %>
										<p><b>Player 2:</b></p><input type="text" id='p2' name="" value=" <%= p2.name %> "disabled>
									<% }else if(p1.name == 'temp'){ %>
										<label for="sel1">Select pokemon 2:</label>
										<select class="form-control" id="sel1" name="p2dlist" disabled>
											<option selected disabled hidden>Need pokemon 1 first...</option>
											<% for(let i = 0; i < pokelist.length; i++){%>
												<option value='<%= pokelist[i].id %>'><%= pokelist[i].name %></option>
											<%}%>
										</select>
									<% }else{ %>
										<label for="sel1">Select pokemon 2:</label>
										<select class="form-control" id="sel1" name="p2dlist" >
											<option selected disabled hidden>Choose form this list...</option>
											<% for(let i = 0; i < pokelist.length; i++){%>
												<option value='<%= pokelist[i].id %>'><%= pokelist[i].name %></option>
											<%}%>
										</select>
									<%} %>

                </div>
								<% if( p1.name == 'temp' || p2.name == 'temp'){%>
										<input type="submit" class="fgtBtnMargLeft" value="Add to gym">
									<%}else{%>
										<input type="submit" class="fgtBtnMargLeft" value="FIGHT!">
									<%}%>
								</form>
							</div>
							<div class="12u$ 12u$(medium)">
								<h2>Winner:</h2><p>(reward: +20cp)</p>
								<input type="text" name="" value="<%= winner.name %>" Disabled>
								<a  href="/resetgym">Reset Gym</a>
							</div>
					</div>
				</section>


			<!-- THREE -->
				<section id="four" class="wrapper style3 special">
					<div class="container">
						<header class="major">
							<h2>Train, Battle, Catch Em All</h2>
						</header>
					</div>
				</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="container">

					<ul class="copyright">
						<li>&copy; Untitled</li>
						<li>Design: <a href="http://templated.co">TEMPLATED</a></li>
						<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
					</ul>
				</div>
			</footer>

		<!-- Scripts -->
			<script src="/js/jquery.min.js"></script>
			<script src="/js/skel.min.js"></script>
			<script src="/js/util.js"></script>
			<script src="/js/main.js"></script>
			<script type="text/javascript" src="/warn.js">

			</script>

	</body>
</html>
