<html>
	<head>
		<title>Pokemon</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel='stylesheet' href='/stylesheets/main.css' />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<nav id="nav">
					<ul>
						<li><a href="/trainers">Trainers</a></li>
						<li><a href="/pokemon">Pok√©mon</a></li>
						<li><a href="/gym">Gym</a></li>
					</ul>
				</nav>
			</header>

			<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

		<!-- Banner -->
			<section id="banner">
				<img class="img" src="/images/pokemon-logo.png" alt="" >
				<!-- <p>Lorem ipsum dolor sit amet nullam consequat <br /> interdum vivamus donce sed libero.</p> -->
				<ul class="actions">
					<li class="top-marg"><a href="/" class="button special big gradient" data-toggle="modal">HOME</a></li>
				</ul>
			</section>

			<!-- One -->
				<section id="one" class="wrapper style1">
					<div class="container 75%">
						<div class="row 200%">
							<div class="11u 12u$(medium)">
								<header class="major">
									<h2>Edit <%= pokeEdit.name%></h2>

									<!--Edit form-->
                  <div class="form-group">
                    <form class="" action="/sendit/<%= pokeEdit.id %>" method="post">
                      <div class="form-group">
                        <input type="text" name="id" value="<%= pokeEdit.id %>" disabled >
                      </div>
                      <div class="form-group">
                        <label for="name">Name</label>
                        <input name="name" type="text" class="form-control" id="name" value="<%= pokeEdit.name %>"required>
                      </div>
                      <div class="form-group">
                        <label for="cp">CP</label>
                        <input name="cp" type="text" class="form-control" id="cp" value="<%= pokeEdit.cp %>"required >
                      </div>
                      <div class="form-group">
                        <label for="trainer_id">Trainer id</label>
                        <input type="text" class="form-control" id="trainer_id" name="trainer_id" value="<%= pokeEdit.trainer_id %>"required>
                      </div>
											<div class="form-group">
									      <label for="sel1">Trainer:</label>
									      <select class="form-control" name='trainer'>
													<% for (let i = 0; i < trainer.length; i ++){%>
									        <option value="<%= trainer[i].id %>"><%= trainer[i].name %></option>
									 				<%}%>
									      </select>
									      <br>
											</div>
                      <input type="submit" name="" value="Update">
                    </form>
                  </div>

								</header>
							</div>
						</div>
					</div>
				</section>



			<!-- THREE -->
				<section id="four" class="wrapper style3 special">
					<div class="container">
						<header class="major">
							<h2>Train, Battle, Grow</h2>
						</header>
					</div>
				</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="container">

					<ul class="copyright">
						<li>&copy; Untitled</li>
						<li>Design: <a href="http://templated.co">TEMPLATED</a></li>
						<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
					</ul>
				</div>
			</footer>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>
