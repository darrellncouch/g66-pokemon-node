<html>
	<head>
		<title>Pokemon</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel='stylesheet' href='/stylesheets/main.css' />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body class="landing">

		<!-- Header -->
			<header id="header" class="alt">
				<nav id="nav">
					<ul>
						<li><a href="/trainers">Trainers</a></li>
						<li><a href="/pokemon">Pokémon</a></li>
						<li><a href="/gym/#one">Gym</a></li>
					</ul>
				</nav>
			</header>

			<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

		<!-- Banner -->
			<section id="banner">
				<img class="img" src="/images/pokemon-logo.png" alt="" >
				<!-- <p>Lorem ipsum dolor sit amet nullam consequat <br /> interdum vivamus donce sed libero.</p> -->
				<ul class="actions">
					<li class="top-marg"><a href="#" class="button special big gradient" data-toggle="modal" data-target="#myModal">Add Pokemon</a></li>
				</ul>
			</section>

			<!-- One -->
				<section id="one" class="wrapper style1">
					<div class="container 75%">
						<div class="row 200%">

							<div class="<4></4>u 12u$(medium)">
								<header class="major">
									<h2>Pokémon</h2>
								</header>
							</div>
							<div class="6u$ 12u$(medium)">
								<table class="table ">
									<tr>
										<th class="th">ID</th>
										<th class="th">Name</th>
										<th class="th nowrap">Trainer ID</th>
										<th class="th">CP</th>
										<th class="th nowrap">In Gym</th>
										<th class="th" colspan="4"></th>
									</tr>
									<% for (let i = 0; i < pokelist.length; i++){ %>
										<tr>
											<td><%= pokelist[i].id %></td>

											<td><a href="/profile/<%= pokelist[i].id %>"><%= pokelist[i].name %></a></td>
											<td><%= pokelist[i].trainer_id %></td>
											<td><%= pokelist[i].cp %></td>
											<td><%= pokelist[i].in_gym %></td>
											<% if(pokelist[i].in_gym == false){ %>
													<td class="nowrap" colspan="2"><a href="/putingym/<%= pokelist[i].id %> "class="custbtn active " >assign to gym</a></td>
											<%}else{%>
											<td class="nowrap" colspan="2"><a href="/removefromgym/<%= pokelist[i].id %>" class="custbtn active" >remove from gym</a></td>
											<%}%>
											<td><a href="/edit/<%= pokelist[i].id %>" class="custbtn active">edit</a></td>
											<td><a href="/delete/<%= pokelist[i].id %>" class="custbtn active">delete</a></td>
										</tr>
									<% } %>
								</table>
							</div>
						</div>
					</div>
				</section>

			<!-- modal: add pokemon -->
				<div class="modal fade" id="myModal" role="dialog">
    		<div class="modal-dialog">
					<!-- Modal content-->
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Add Pokémon</h4>
			      </div>
			      <div class="modal-body">

							<!--add list -->
							<div class="form-group">
								<form class="" action="/addpoke" method="post">
									<div class="form-group">
										<label for="name">Name</label>
										<input name="name" type="text" class="form-control" id="name" required>
									</div>
									<div class="form-group">
										<label for="cp">CP</label>
										<input name="cp" type="text" class="form-control" id="cp" required >
									</div>
									<div class="form-group">
										<label for="trainer_id">Trainer id</label>
										<input type="text" class="form-control" id="trainer_id" name="trainer_id" required>
									</div>
									<div class="form-group">
										<label for="img">Image link</label>
										<input type="text" name="img_link" value="">
									</div>

									<input type="submit" name="" value="add">
								</form>
							</div>

			      </div>
			    </div>
				</div>
				</div>



			<!-- THREE -->
				<section id="four" class="wrapper style3 special">
					<div class="container">
						<header class="major">
							<h2>Train, Battle, Catch Em All</h2>
						</header>
					</div>
				</section>




		<!-- Footer -->
			<footer id="footer">
				<div class="container">

					<ul class="copyright">
						<li>&copy; Untitled</li>
						<li>Design: <a href="http://templated.co">TEMPLATED</a></li>
						<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
					</ul>
				</div>
			</footer>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>
